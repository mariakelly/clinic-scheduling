{% extends '::base.html.twig' %}
{% set page_title = "View Configuration Option" %}
{% block body -%}
    <a class="btn btn-xs btn-primary pull-right" href="{{ path('admin_configure') }}">
        &laquo; Return to Configuration
    </a>
    <h1>View Configuration Option</h1>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ entity.value }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary pull-right" href="{{ path('admin_configure_edit', { 'id': entity.id }) }}">
        Edit
    </a>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <br><br>
        <hr>
        {{ form(delete_form) }}
    {% endif %}
{% endblock %}
